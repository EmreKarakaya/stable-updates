    <Package>
        <Name>firefox</Name>
        <RuntimeDependencies>
            <Dependency>xulrunner</Dependency>
            <Dependency>fontconfig</Dependency>
            <Dependency>gtk2</Dependency>
            <Dependency>pango</Dependency>
            <Dependency>cairo</Dependency>
            <Dependency>libIDL</Dependency>
            <Dependency>startup-notification</Dependency>
            <Dependency>dbus-glib</Dependency>
            <Dependency>hunspell</Dependency>
            <Dependency>libproxy</Dependency>
            <Dependency>nspr</Dependency>
            <Dependency>nss</Dependency>
            <Dependency>libevent</Dependency>
            <Dependency>libvpx</Dependency>
            <Dependency>atk</Dependency>
            <Dependency>jpeg</Dependency>
            <Dependency>openjpeg</Dependency>
            <Dependency>libXt</Dependency>
            <Dependency>gconf</Dependency>
            <Dependency>pixman</Dependency>
            <Dependency>libXext</Dependency>
            <Dependency>freetype</Dependency>
            <Dependency>alsa-lib</Dependency>
            <Dependency>libnotify</Dependency>
            <Dependency>gdk-pixbuf</Dependency>
            <Dependency>libXrender</Dependency>
            <Dependency>valgrind</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="config">/etc/</Path>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="executable">/usr/lib/MozillaFirefox</Path>
            <Path fileType="executable">/usr/libexec</Path>
            <Path fileType="data">/usr/lib/pkgconfig</Path>
            <Path fileType="data">/usr/share/applications</Path>
            <Path fileType="data">/usr/share/pixmaps</Path>
            <Path fileType="data">/usr/share/mime</Path>
            <Path fileType="doc">/usr/share/doc</Path>
        </Files>
        <AdditionalFiles>
            <!-- wrappers -->
            <AdditionalFile target="/usr/bin/firefox" permission="0755" owner="root">pisilinux/firefox</AdditionalFile>

            <!-- Desktop file -->
            <AdditionalFile target="/usr/share/applications/mozillafirefox.desktop" permission="0644" owner="root">pisilinux/mozillafirefox.desktop</AdditionalFile>

            <!-- Default options -->
            <AdditionalFile target="/usr/lib/MozillaFirefox/defaults/preferences/firefox-pisilinux.js" permission="0644" owner="root">pisilinux/default-prefs.js</AdditionalFile>
            <AdditionalFile target="/usr/lib/MozillaFirefox/defaults/preferences/firefox-l10n.js" permission="0644" owner="root">pisilinux/firefox-l10n.js</AdditionalFile>
            <AdditionalFile target="/usr/lib/MozillaFirefox/browserconfig.properties" permission="0644" owner="root">pisilinux/browserconfig.properties</AdditionalFile>
            <AdditionalFile target="/usr/lib/MozillaFirefox/defaults/pref/kde.js" permission="0644">suse/kde.js</AdditionalFile>

            <!-- search plugins -->
            <AdditionalFile target="/usr/lib/MozillaFirefox/searchplugins/uluzilla.xml" permission="0644" owner="root">searchplugins/uluzilla.xml</AdditionalFile>
            <AdditionalFile target="/usr/lib/MozillaFirefox/searchplugins/firefox-searchengines-duckduckgo.xml" permission="0644" owner="root">searchplugins/firefox-searchengines-duckduckgo.xml</AdditionalFile>

            <!-- Pardus-Wiki search plugins -->
            <AdditionalFile target="/usr/lib/MozillaFirefox/pisilinux/pardus-wiki_tr.xml" permission="0644" owner="root">searchplugins/pardus-wiki/pardus-wiki_tr.xml</AdditionalFile>
            <AdditionalFile target="/usr/lib/MozillaFirefox/pisilinux/pardus-wiki_en.xml" permission="0644" owner="root">searchplugins/pardus-wiki/pardus-wiki_en.xml</AdditionalFile>
            <AdditionalFile target="/usr/lib/MozillaFirefox/pisilinux/pardus-wiki_nl.xml" permission="0644" owner="root">searchplugins/pardus-wiki/pardus-wiki_nl.xml</AdditionalFile>
            <AdditionalFile target="/usr/lib/MozillaFirefox/pisilinux/pardus-wiki_pt.xml" permission="0644" owner="root">searchplugins/pardus-wiki/pardus-wiki_pt.xml</AdditionalFile>

            <!-- Default bookmarks -->
            <AdditionalFile target="/usr/lib/MozillaFirefox/pisilinux/bookmarks-tr.html" permission="0644" owner="root">pisilinux/pisilinux_bookmark-tr.html</AdditionalFile>
            <AdditionalFile target="/usr/lib/MozillaFirefox/pisilinux/bookmarks-en.html" permission="0644" owner="root">pisilinux/pisilinux_bookmark-en.html</AdditionalFile>
            <AdditionalFile target="/usr/lib/MozillaFirefox/pisilinux/bookmarks-nl.html" permission="0644" owner="root">pisilinux/pisilinux_bookmark-nl.html</AdditionalFile>
            <AdditionalFile target="/usr/lib/MozillaFirefox/pisilinux/bookmarks-de.html" permission="0644" owner="root">pisilinux/pisilinux_bookmark-de.html</AdditionalFile>

            <!-- Mimetype for XPI files -->
            <AdditionalFile target="/usr/share/mime/packages/firefox.xml" permission="0644" owner="root">suse/firefox-mimeinfo.xml</AdditionalFile>

            <!--<AdditionalFile target="/usr/lib/MozillaFirefox/defaults/preferences/lockdown.js" permission="0644" owner="root">suse/firefox-lockdown.js</AdditionalFile>-->
        </AdditionalFiles>
        <Provides>
            <COMAR script='package.py'>System.Package</COMAR>
        </Provides>
    </Package>

    <Package>
        <Name>firefox-devel</Name>
        <Summary>Development files for Firefox</Summary>
        <RuntimeDependencies>
            <Dependency releaseFrom="current">firefox</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="header">/usr/include</Path>
            <Path fileType="data">/usr/share/idl</Path>
            <Path fileType="executable">/usr/lib/firefox-devel*</Path>
        </Files>
    </Package>

