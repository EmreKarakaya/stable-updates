    <Package>
        <Name>wordpress-ca</Name>
	<IsA>locale:ca</IsA>
	<Summary>Catalan language package for wordpress</Summary>
        <RuntimeDependencies>
            <Dependency>wordpress</Dependency>
        </RuntimeDependencies>
        <Files>
	    <Path fileType="data">/usr/share/wordpress/wp-content/languages/*ca*</Path>
	    <Path fileType="data">/usr/share/wordpress/wp-content/languages/themes/*ca*</Path>
        </Files>
    </Package>
